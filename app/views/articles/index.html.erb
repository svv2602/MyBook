<% provide(:title, 'Просмотр всех статей') %>

<h1> Список статей </h1>
<%= link_to "Создать новую статью", new_article_path %>
<hr />
<table>
  <tr>
    <th>Группа</th>
    <th>Наименование</th>
    <th colspan="3"></th>
  </tr>

  <% @divisions.each do |d| %>
    <tr>
      <td><strong><%= d.name %></strong></td>
    </tr>

    <% @articles[d].to_a.each do |article| %>
      <tr>
        <td></td>
        <td><%= link_to article.title, article_path(article)   %></td>
      </tr>
    <% end %>


  <% end %>


</table>


