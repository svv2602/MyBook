<% provide(:title, 'Просмотр всех статей') %>

<h1> Список статей </h1>
<%= link_to "Создать новую статью", new_article_path %>
<hr />
<table>
  <tr>
    <th>Группа</th>
    <th>Наименование</th>
    <th colspan="3"></th>
  </tr>

  <% Division.all.each do |d| %>
    <tr>
      <td><strong><%= d.name %></strong></td>
    </tr>
    <%  arr = (@articles.select {|a| d.id==a.division_id}) %>

    <% arr.each do |article| %>
      <tr>
        <td></td>
        <td><%= article.title %></td>
        <td><%= link_to 'Показать', article_path(article) %></td>
        <td><%= link_to 'Редактировать', edit_article_path(article) %></td>
        <td><%= link_to 'Удалить', article_path(article),
                        method: :delete,
                        data: { confirm: 'Вы подтверждаете удаление статьи?' } %></td>
      </tr>
    <% end %>


  <% end %>


</table>


